<div id="login-panel-one">
  <div style="position:relative;">
    <h2 style="margin:0;float:left">(LOGO) sailbnb</h2>
    <a style="float:right">Login</a>
    <a style="float:right">Sign Up</a>
  </div>
  <div id="login-form" class="row" style="display:none">
    <form action="<%= session_url %>" method="post" class="col-md-10 col-md-offset-1">
      <input 
        type="hidden" 
        name="authenticity_token" 
        id="" 
        value="<%= form_authenticity_token %>" 
      />
      <div>
        <input 
          type="text" 
          placeholder="Email" 
          name="user[email]" 
          class="login-field" 
          value="<%= @user.email %>" 
        />
      </div>
      <div>
        <input 
          type="password" 
          placeholder="Password" 
          name="user[password]" 
          class="login-field" 
        />
      </div>
      <input type="submit" class="login-field" value="Sign In" />
      <p class="login-field">Guest Login</p>
    </form>
    <a href="<%= new_user_url %>">Register as new user!</a>
  </div>
  <div id="login-start" class="text-center">
    <a href='#'>Guest Login</a>
  </div>
</div>
<div id="login-panel-two">
  <h2 style="margin-bottom:5px;"class="text-center">Start Your Adventure</h2>
  <p class="text-center">Explore the oceans that seafarers love.</p>
</div>
