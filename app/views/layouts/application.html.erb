<!DOCTYPE html>
<html>
<head>
  <title>WaterBnb</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if flash.notice %>
  <ul>
  <% flash.notice.each do |notice| %>
    <li><%= notice %></li>
  <% end %>
  </ul>
<% end %>

<%= yield %>

</body>
</html>
